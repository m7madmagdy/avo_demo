<turbo-frame id="dashy_custom_card" turbo-visit-control="reload" class="flex flex-col space-y-4 p-4" data-controller="filter">
  <!-- Filters Form -->
  <form data-action="submit->filter#applyFilter" class="space-y-4">
    <div class="flex space-x-4 items-end">
      <!-- Dynamic Date Range Filter -->
      <div>
        <label for="start_date" class="block text-sm font-medium text-gray-700">Start Date</label>
        <input type="date" name="start_date" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
      </div>
      <div>
        <label for="end_date" class="block text-sm font-medium text-gray-700">End Date</label>
        <input type="date" name="end_date" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
      </div>
      <div>
        <button type="submit" class="px-4 py-2 text-black bg-indigo-600 rounded-md shadow-sm hover:bg-indigo-700">
          Apply
        </button>
      </div>
    </div>
  </form>

  <!-- Users Count Result -->
  <div class="text-lg font-semibold mt-4">
    Total Users: <%= @card.result_data %>
  </div>
</turbo-frame>
