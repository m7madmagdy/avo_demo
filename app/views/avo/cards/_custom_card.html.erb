<div class="flex flex-col space-y-4 p-4">
  <!-- Dropdowns for filters -->
  <div class="flex space-x-4">
    <!-- Date Range Dropdown -->
    <div>
      <label for="time_range" class="block text-sm font-medium text-gray-700">Date Range</label>
      <%= select_tag "time_range", options_for_select(["ALL", "7 days", "MTD", "QTD", "YTD", "TODAY"], params[:time_range]),
        class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        data: { action: "change->dashboard-card-controller#connect" } %>
    </div>

    <!-- Country Dropdown -->
    <div>
      <label for="country" class="block text-sm font-medium text-gray-700">Country</label>
      <%= select_tag "country", options_for_select(["Mexico", "Canada", "USA"], params[:country]),
        class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        data: { action: "change->dashboard-card-controller#connect" } %>
    </div>
  </div>

  <!-- Users Count Result -->
  <div class="text-lg font-semibold">
    Total Users: <%= @card.result_data %>
  </div>
</div>